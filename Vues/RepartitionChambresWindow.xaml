<Window x:Class="CiteU.Vues.RepartitionChambresWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Répartition des Lits" Height="300" Width="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Répartition des lits entre les deux chambres" FontSize="16" FontWeight="Bold" Margin="10"/>

            <StackPanel Orientation="Horizontal">
                <Label Content="Nombre de Lits de la 1ere Chambre"></Label>
                <TextBox x:Name="txtCapaciteChambre1" Text="{Binding CapaciteChambre1}" Width="60" Margin="15 0 0 0" TextAlignment="Right"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <Label Content="Nombre de Lits de la 2eme Chambre"></Label>
                <TextBox x:Name="txtCapaciteChambre2" Text="{Binding CapaciteChambre2}" Width="60" Margin="15 0 0 0" TextAlignment="Right"/>
            </StackPanel>
            <Button Content="Enregistrer" Click="Enregistrer_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
