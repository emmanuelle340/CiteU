<Window x:Class="CiteU.Vues.ChoixChambreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choix de la Chambre" Height="200" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Veuillez choisir une chambre :" Margin="5"/>
            <ComboBox x:Name="ChambresComboBox" DisplayMemberPath="Nom_Chambre" Width="200" Margin="5"/>
            <Button Content="Valider" Width="80" Height="30" Margin="5" Click="Valider_Click"/>
        </StackPanel>
    </Grid>
</Window>
